<div class="row">
  <aside>
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div>
    <ul class>
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">Tasklists  <span class="badge badge-secondary"><%= @count_tasklists %></span></a></li>
    </ul>
    <%= render 'tasklists/tasklists', tasklists: @tasklists %>
  </div>
</div>