<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <img src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
          <%= user.name %>
            <p><%= link_to 'View profile', user_path(user) %></p>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>